<h1>Criar Usuário</h1>
<% if flash[:alert] %>
  <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
      <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
    </symbol>
  </svg>
  <div class="alert alert-danger d-flex align-items-center" role="alert">
    <svg class="bi flex-shrink-1 me-2" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
    <div>
      <%= flash[:alert] %>
    </div>
  </div>
<% end %>
<%= form_with(model: @user, url: users_path, local: true, class: 'needs-validation') do |form| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <div class="form-floating mb-3">
    <%= form.text_field :name, class: 'form-control', id: 'floatingName', placeholder: 'Nome', required: true %>
    <%= form.label :name, 'Nome', class: 'form-floating-label' %>
    <div class="invalid-feedback">
      <%= form.object&.errors&.full_messages_for(:name)&.first %>
    </div>
  </div>

  <div class="form-floating mb-3">
    <%= form.email_field :email, class: 'form-control', id: 'floatingEmail', placeholder: 'name@example.com', required: true %>
    <%= form.label :email, 'Email address', class: 'form-floating-label' %>
    <div class="invalid-feedback">
      <%= form.object&.errors&.full_messages_for(:email)&.first %>
    </div>
  </div>

  <div class="form-floating mb-3">
    <%= form.password_field :password, class: 'form-control', id: 'floatingPassword', placeholder: 'Password', required: true %>
    <%= form.label :password, 'Password', class: 'form-floating-label' %>
    <div class="invalid-feedback">
      <%= form.object&.errors&.full_messages_for(:password)&.first %>
    </div>
  </div>

  <div class="form-floating mb-3">
    <%= form.password_field :password_confirmation, class: 'form-control', id: 'floatingPasswordConfirmation', placeholder: 'Confirm Password', required: true %>
    <%= form.label :password_confirmation, 'Confirm Password', class: 'form-floating-label' %>
    <div class="invalid-feedback">
      <%= form.object&.errors&.full_messages_for(:password_confirmation)&.first %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit 'btn', value: 'Criar Usuário' %>
  </div>

<% end %>
