<p style="color: green"><%= notice %></p>

<h1>Contacts</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Phone</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @contacts.each do |contact| %>
    <tr id="<%= dom_id(contact) %>" class="contact-row">
      <td><%= contact.name %></td>
      <td><%= contact.phone %></td>
      <td>
        <%= link_to "Show", contact, class: "btn btn-primary btn-sm" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "New Contact", new_contact_path, class: "btn btn-success" %>
